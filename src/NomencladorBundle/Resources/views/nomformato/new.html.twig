{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
{% block bread %}
{% endblock %}
 {% block titulo_cont %}
     <li><a href="{{ path('portada') }}">Inicio</a></li>
     <li><a >Nomencladores</a></li>
     <li><a href="{{ path('formato_index') }}">Formato</a></li>
     <li><a class="active">{{ accion }}</a></li>
 {% endblock %}
{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-format','class':'form-edit' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <div class="col-sm-offset-3" id="div_error_long"></div>
                            <fieldset>
                                <div class="form-group col-xs-6">
                                    <label for="codigo"
                                           class="col-xs-4 control-label"> {{ form_label(form.codigo) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.codigo) }}
                                        {{ form_errors(form.codigo) }}
                                    </div>

                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="codigo"
                                           class="col-xs-4 control-label"> {{ form_label(form.nombre) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>

                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="idunidadmedida"
                                           class="col-xs-4 control-label"> {{ form_label(form.idunidadmedida) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.idunidadmedida) }}
                                        {{ form_errors(form.idunidadmedida) }}
                                    </div>

                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="peso"
                                           class="col-xs-4 control-label"> {{ form_label(form.peso) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.peso) }}
                                        {{ form_errors(form.peso) }}
                                    </div>

                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="idunidadmedida"
                                           class="col-xs-4 control-label"> {{ form_label(form.idsubgenerico) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.idsubgenerico) }}
                                        {{ form_errors(form.idsubgenerico) }}
                                    </div>

                                </div>
                            </fieldset>
                            <fieldset>

                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-6">
                                        {% if accion == "Adicionar" %}
                                            <button type="submit" id="btn_agregar_formato" title="Guardar"
                                                    class="btn btn-primary disabled">
                                                <i class="glyphicon glyphicon-save icon-white"> </i> Guardar</button>
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar" href="{{ path('formato_index') }}" id="btn_cerrar"
                                           data-ajax-url="{{ path('formato_index') }}"
                                           data-url="{{ path('formato_index') }}"
                                           class="btn btn-default {% if accion != 'Adicionar' %} editcerrar {% endif %} ">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>

                            </fieldset>
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
