<fieldset>
    <div class="">
        <div class="{%- if not form.listMedidor.vars.valid %} has-error{% endif %}">

            <div class="caption">{{ form_label(form.listMedidor) }}</div>
            <div class="pull-right">
                <button type="button" class="btn btn-default text-green btn-xs add-form-embedded"
                        data-container="#listMedidor-tbody">
                    <i class="fa fa-plus"></i>
                    Adicionar
                </button>
            </div>
        </div>
        <div class="cont-table-blanco col-xs-12">
            {{ form_errors(form.listMedidor) }}

            <table class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th width="500">Medidor</th>
                    <th >Lectura</th>
                    <th >Multiplicar por</th>
                    <th >Consumo</th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="listMedidor-tbody"
                       data-prototype="{{ form_widget(form.listMedidor.vars.prototype)|e }}"
                       data-index="{{ form.listMedidor|length }}">
                {% for medidor in form.listMedidor %}
                    {{ form_widget(medidor) }}
                {% endfor %}
                </tbody>
            </table>

            {{ form_widget(form.listMedidor) }}{# Para que no se muestre nuevamente el texto components #}
        </div>
    </div>
</fieldset>