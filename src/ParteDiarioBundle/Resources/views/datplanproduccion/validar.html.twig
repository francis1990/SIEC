<body class="">
<h4 align="center" style="margin-top: 5px"><strong>Validaci√≥n de Planes de Producci&oacute;n </strong></h4>
<h5 style="margin-top: 5px">
    {% if ueb != "" %}
        UEB: {{ ueb }} &nbsp;&nbsp;&nbsp;&nbsp;
    {% endif %}
    {% if ejercicio != "" %}
        Ejercicio: {{ ejercicio }} &nbsp;&nbsp;&nbsp;&nbsp;
    {% endif %}
    {% if tipoplan != "" %}
        Tipo Plan: {{ tipoplan }} &nbsp;&nbsp;
    {% endif %}
    {% if fecha != "" %}
        Fecha: {{ fecha }} &nbsp;&nbsp;
    {% endif %}

</h5>
<div align="center">

    <table width="100%" class="" id="generar-table">
        <thead align="left">
        <tr style="background-color: #00c0ef;font-size: small">
            <th width="20%">Producto</th>
            <th width="2%" class="text name">UM</th>
            <th width="2%" class="text name">Destino</th>
            <th width="5%" class="text name">Ene</th>
            <th width="5%" class="text name">Feb</th>
            <th width="5%" class="text name">Mar</th>
            <th width="5%" class="text name">Abr</th>
            <th width="5%" class="text name">May</th>
            <th width="5%" class="text name">Jun</th>
            <th width="5%" class="text name">Jul</th>
            <th width="5%" class="text name">Ago</th>
            <th width="5%" class="text name">Sep</th>
            <th width="5%" class="text name">Oct</th>
            <th width="5%" class="text name">Nov</th>
            <th width="5%" class="text name">Dic</th>
            <th width="5%" class="text name">Total Capturado</th>
            <th width="5%" class="text name">Total Calculado</th>
            <th width="5%" class="text name">Diferencia</th>
        </tr>
        </thead>
        <tbody class="" style="font-size: 90%">
        {% for dat in  data %}
            {#{% if dat[0] =='Diferencia' %}#}
                {#<tr align="left" style="border:solid;border-bottom-color: #1a1a1a;">#}
                    {#{% for d in dat %}#}
                        {#{% if loop.index >3 %}#}
                            {#<th style="background-color: #7aba7b;color: #942a25" align="right">{{ d }}</th>#}
                        {#{% else %}#}
                            {#<th style="background-color: #7aba7b;color: #942a25" align="left">{{ d }}</th>#}
                        {#{% endif %}#}
                    {#{% endfor %}#}
                {#</tr>#}
            {#{% else %}#}
                <tr style="font-family: Courier;" >
                    {% for d in dat %}
                        {% if loop.index >3 %}
                            <td align="right"  class="">{{ d }}</td>
                        {% else %}
                            <td align="left"  class="">{{ d }}</td>
                        {% endif %}
                    {% endfor %}
                </tr>
            {#{% endif %}#}
        {% endfor %}
        </tbody>
    </table>
</div>
