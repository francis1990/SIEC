{% extends 'NomencladorBundle:Nom_crud:nom_insert.html.twig' %}
{% block li_link %}  {% endblock %}
{% block li_actual %}   {% endblock %}
{% block link_actual %}{% endblock %}
{% block titulo_cont %}
    <li><a href="{{ path('portada') }}">Inicio</a></li>
    <li><a >Nomencladores</a></li>
    <li><a href="{{ path('entidad_index') }}">Entidad</a></li>
    <li><a href="#" id="entidad">{{ accion }} </a></li>
{% endblock %}
{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-entidad', 'class': 'form-edit' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset id="componentes">

                                <div class="form-group col-xs-6">
                                    <label for="codigo"
                                           class="col-xs-4 control-label">{{ form_label(form.codigo) }}</label>
                                    <div class="col-xs-8">
                                        {{ form_widget(form.codigo) }}
                                        {{ form_errors(form.codigo) }}
                                    </div>
                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="codigo"
                                           class="col-xs-4 control-label">{{ form_label(form.nombre) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>
                                </div>

                                <div class="form-group col-xs-6">
                                    <label for="iddpa"
                                           class="col-xs-4 control-label">{{ form_label(form.iddpa) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.iddpa) }}
                                        {{ form_errors(form.iddpa) }}
                                    </div>
                                </div>

                                <div class="form-group col-xs-6">
                                    <label for="idtipoentidad"
                                           class="col-xs-4 control-label">{{ form_label(form.idtipoentidad) }}</label>
                                    <div class="col-xs-8">
                                        {{ form_widget(form.idtipoentidad) }}
                                        {{ form_errors(form.idtipoentidad) }}
                                    </div>
                                </div>

                                <div class="form-group col-xs-6">
                                    <label for="idpadre"
                                           class="col-xs-4 control-label">{{ form_label(form.entsuperior) }}</label>
                                    <div class="col-xs-8">
                                        {{ form_widget(form.entsuperior) }}
                                        {{ form_errors(form.entsuperior) }}
                                    </div>
                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="siglas"
                                           class="col-xs-4 control-label">{{ form_label(form.siglas) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.siglas) }}
                                        {{ form_errors(form.siglas) }}
                                    </div>
                                </div>
                                <div class="form-group col-xs-6">
                                    <label for="siglas"
                                           class="col-xs-4 control-label">{{ form_label(form.diasvencidos) }}</label>

                                    <div class="col-xs-8">
                                        {{ form_widget(form.diasvencidos) }}
                                        {{ form_errors(form.diasvencidos) }}
                                    </div>
                                </div>
                                <div class="col-xs-offset-3 col-xs-9">
                                    <div class="form-group col-xs-4">
                                        <label for="iddpa"
                                               class="col-xs-6 control-label">{{ form_label(form.receptor) }}</label>

                                        <div class="col-xs-6">
                                            {{ form_widget(form.receptor) }}
                                            {{ form_errors(form.receptor) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-xs-3">
                                        <label for="iddpa"
                                               class="col-xs-6 control-label">{{ form_label(form.vinculo) }}</label>

                                        <div class="col-xs-6">
                                            {{ form_widget(form.vinculo) }}
                                            {{ form_errors(form.vinculo) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-xs-3">
                                        <label for="iddpa"
                                               class="col-xs-6 control-label">{{ form_label(form.estatal) }}</label>

                                        <div class="col-xs-6">
                                            {{ form_widget(form.estatal) }}
                                            {{ form_errors(form.estatal) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-xs-3">
                                        <label for="iddpa"
                                               class="col-xs-6 control-label">{{ form_label(form.acopio) }}</label>

                                        <div class="col-xs-6">
                                            {{ form_widget(form.acopio) }}
                                            {{ form_errors(form.acopio) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-xs-12">
                                    <label for="codigo" class="col-xs-1">{{ form_label(form.direccion) }}</label>

                                    <div class="col-xs-offset-1 col-xs-9">
                                        {{ form_widget(form.direccion) }}
                                        {{ form_errors(form.direccion) }}
                                    </div>
                                </div>
                                {% if accion == "Editar" %}
                                    <input type="hidden" value="{{ idpadre }}" id="idpadre"/>
                                {% endif %}
                            </fieldset>
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <div class="col-xs-6 pull-right">
                                        {% if accion == "Adicionar" %}
                                            <button id="btn_agreentidad" data-accion="agregar" type="submit"
                                                    title="Guardar" class="btn btn-primary disabled ">
                                                <i class="glyphicon glyphicon-save icon-white"></i>
                                                Guardar
                                            </button>
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a href=" {{ path('entidad_index') }} "
                                           data-url = "{{ path('entidad_index') }}"
                                           class="btn btn-default {% if accion != 'Adicionar' %} editcerrar {% endif %} ">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div><!-- /.box-body -->

                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {% block otherscript %}
        <script type="text/javascript" src="{{ asset('bundles/tercero/js/js_crud/fn_nom_entidad.js') }}"></script>
    {% endblock %}
{% endblock %}



