{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-body">
                        {{ form_start(edit_form,{'attr':{ 'id':'form-ptrans','class':'form-edit'} }) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                                <div class="form-group  ">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(edit_form.ueb) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(edit_form.ueb) }}
                                        {{ form_errors(edit_form.ueb) }}
                                    </div>

                                </div>
                                <div class="form-group  ">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(edit_form.fecha) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(edit_form.fecha) }}
                                        {{ form_errors(edit_form.fecha) }}
                                    </div>
                                </div>
                                <div class="form-group  ">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(edit_form.tipotransporte) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(edit_form.tipotransporte) }}
                                        {{ form_errors(edit_form.tipotransporte) }}
                                    </div>

                                </div>
                                <div class="form-group ">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(edit_form.existencia) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(edit_form.existencia) }}
                                        {{ form_errors(edit_form.existencia) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(edit_form.disponible) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(edit_form.disponible) }}
                                        {{ form_errors(edit_form.disponible) }}
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(edit_form.cdt) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(edit_form.cdt) }}
                                        {{ form_errors(edit_form.cdt) }}
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group ">
                                    <div class="col-sm-4 col-xs-12  col-sm-offset-8">
                                        <button class="btn btn-primary  disabled" id="btn_add_ptrans" data-accion="aceptar" title="Aceptar"
                                           data-url="{{ path('partetransporte_edit',{ 'id': datParteTransporte.idparte }) }}">
                                            <i class="glyphicon glyphicon-ok icon-white"></i>
                                            Aceptar
                                        </button>
                                        <a href="{{ path('partetransporte_index') }}" data-url="{{ path('partetransporte_index') }}"
                                           id="btn_cerrar"  title="Cancelar"
                                           class="editcerrar btn btn-default ">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        {{ form_end(edit_form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}

