{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
 {% block titulo_cont %}
     <li><a href="{{ path('portada') }}">Inicio</a></li>
     <li><a >Nomencladores</a></li>
     <li><a href="{{ path('nommedidor_index') }}">Medidor</a></li>
     <li><a class="active">{{ action }}</a></li>
 {% endblock %}

{% block contenido %}
    <div class="col-xs-6 col-sm-12" id="content">
        <section class="content">
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="box box-primary ">
                        <div class="box-header">
                            <h3 class="box-title">{{ action }}</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                            <div class=" bootstrap-validator-form">
                                {{ form_start(form,{'attr':{ 'id':'form-medidor','class':'form-edit' } }) }}
                                <fieldset>
                                    <div class="form-group col-xs-12">
                                        <label for="nombre"
                                               class=" col-xs-offset-2 col-xs-2 control-label"> {{ form_label(form.nombre) }}</label>
                                        <div class="col-xs-4">
                                            {{ form_widget(form.nombre) }}
                                            {{ form_errors(form.nombre) }}
                                        </div>
                                    </div>

                                </fieldset>

                                <fieldset>
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <div class="col-xs-6 col-xs-offset-6">
                                                {% if action == 'Adicionar' %}
                                                    {{ form_widget(form.guardar) }}
                                                {% endif %}
                                                {{ form_widget(form.aceptar) }}

                                                <a href="{{ path('nommedidor_index') }}"
                                                   data-ajax-url="{{ path('nommedidor_index') }}"
                                                   data-url="{{ path('nommedidor_index') }}"
                                                   id="btn_cerrar" title="Cancelar"
                                                   class="btn btn-default  {% if action != 'Adicionar' %} editcerrar {% endif %}">
                                                    <i class="glyphicon glyphicon-remove icon-white"></i>
                                                    Cancelar
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}

{% endblock %}



