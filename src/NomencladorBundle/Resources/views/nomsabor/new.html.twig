{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}

  {% block titulo_cont %}
      <li><a href="{{ path('portada') }}">Inicio</a></li>
      <li><a >Nomencladores</a></li>
      <li><a href="{{ path('sabor_index') }}">Sabores/Cualidades</a></li>
      <li><a class="active">{{ accion }}</a></li>
  {% endblock %}

{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-sabor','class':'form-edit' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>

                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-xs-3 control-label"> {{ form_label(form.codigo) }}</label>

                                    <div class="col-xs-4">
                                        {{ form_widget(form.codigo) }}
                                        {{ form_errors(form.codigo) }}
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-xs-3 control-label">{{ form_label(form.nombre) }}</label>

                                    <div class="col-xs-4">
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="idsubgenerico"
                                           class="col-xs-3 control-label"> {{ form_label(form.idsubgenerico) }}</label>

                                    <div class="col-xs-4">
                                        {{ form_widget(form.idsubgenerico) }}
                                        {{ form_errors(form.idsubgenerico) }}
                                    </div>

                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group ">
                                    <div class="col-sm-6 col-sm-offset-6">
                                        {% if accion == "Adicionar" %}
                                            <button type="submit" id="btn_agregar_sabor" title="Guardar"
                                                    class="btn btn-primary disabled">
                                                <i class="glyphicon glyphicon-save icon-white"> </i> Guardar</button>
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar" href="{{ path('sabor_index') }}" id="btn_cerrar"
                                           data-url="{{ path('sabor_index') }}"
                                           class="btn btn-default  {% if accion != 'Adicionar' %} editcerrar {% endif %}">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </fieldset>
                            {{ form_rest(form) }}
                            {{ form_end(form) }}

                        </div>
                        <!-- /.box-body -->
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}





