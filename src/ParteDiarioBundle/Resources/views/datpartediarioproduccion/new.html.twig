{% extends 'ParteDiarioBundle:Default:partediario_base.html.twig' %}
{% block asiderigth %}"right-side strech"{% endblock %}
 {% block menu_lateral %}{% endblock %}
{% block hide_menu %}
{% endblock %}
  {% block titulo_cont %}
      <li><a href="{{ path('portada') }}">Inicio</a></li>
      <li><a href="{{ path('parteproduccion_index',{'fecha':fecha, 'ueb':ueb}) }}">Parte diario de nivel de actividad</a></li>
      <li><a class="active">{{ action }}</a></li>
  {% endblock %}
{% block menu_bot %}
{% endblock %}
{% block contenido %}
    <section class="content" id="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ action }}</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-pro','class':'form-edit', 'novalidate':'novalidate'} }) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab_1" data-toggle="tab">Datos generales</a></li>
                                    {# <li><a href="#tab_2" data-toggle="tab">Aseguramiento</a></li>#}
                                    <li><a href="#tab_3" data-toggle="tab">Incidencias</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_1">
                                        <fieldset>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.fecha) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.fecha) }}
                                                    {{ form_errors(form.fecha) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.almacen) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.almacen) }}
                                                    {{ form_errors(form.almacen) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.ueb) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.ueb) }}
                                                    {{ form_errors(form.ueb) }}
                                                </div>
                                            </div>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.moneda) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.moneda) }}
                                                    {{ form_errors(form.moneda) }}
                                                </div>
                                            </div>


                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.producto) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.producto) }}
                                                    {{ form_errors(form.producto) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.cantproceso) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.cantproceso) }}
                                                    {{ form_errors(form.cantproceso) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.um) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.um) }}
                                                    {{ form_errors(form.um) }}
                                                </div>
                                            </div>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.cantidad) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.cantidad) }}
                                                    {{ form_errors(form.cantidad) }}

                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.entrega) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.entrega) }}
                                                    {{ form_errors(form.entrega) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6 hidden" id="div-empaque">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.cantempaque) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.cantempaque) }}
                                                    {{ form_errors(form.cantempaque) }}
                                                </div>
                                            </div>

                                        </fieldset>
                                    </div>
                                    <div class="tab-pane" id="tab_3">
                                        {% include 'ParteDiarioBundle:Default:add_incidencias.html.twig' %}
                                    </div>
                                </div><!-- /.tab-content -->
                            </div>
                            <fieldset>
                                <div class="form-group">
                                    <div class=" col-sm-6 col-sm-offset-6">
                                        {% if action == 'Adicionar' %}
                                            {{ form_widget(form.guardar) }}
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar" href="{{ path('parteproduccion_index',{'fecha':fecha, 'ueb':ueb}) }}"
                                           data-url="{{ path('parteproduccion_index',{'fecha':fecha, 'ueb':ueb}) }}"
                                           class="btn btn-default  {% if action != 'Adicionar' %} editcerrar {% endif %}"
                                           id="btn_cerrar">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </fieldset>
                        </div>


                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/plugins/bootbox/bootbox.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/js_plan/fn_parteprod.js') }}"></script>
{% endblock %}
