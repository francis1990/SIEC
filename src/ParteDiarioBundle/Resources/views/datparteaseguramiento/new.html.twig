{% extends 'ParteDiarioBundle:Default:partediario_base.html.twig' %}
{% block asiderigth %}"right-side strech"{% endblock %}
 {% block menu_lateral %}{% endblock %}
{% block hide_menu %}
{% endblock %}
{% block bread %}
{% endblock %}
  {% block titulo_cont %}
      <li><a href="{{ path('portada') }}">Inicio</a></li>
      <li><a href="{{ path('parteaseguramiento_index',{'fecha':fecha, 'ueb':ueb}) }}">Parte diario de aseguramiento</a></li>
      <li><a class="active">{{ action }}</a></li>
  {% endblock %}
{% block menu_bot %}
{% endblock %}
{% block contenido %}
    <section class="content" id="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ action }}</h3>
                    </div>
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-paseg', 'novalidate':'novalidate','class':'form-edit'} }) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab_1" data-toggle="tab">Datos generales</a></li>
                                    <li><a href="#tab_3" data-toggle="tab">Incidencias</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_1">
                                        <fieldset>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.fecha) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.fecha) }}
                                                    {{ form_errors(form.fecha) }}
                                                </div>
                                            </div>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.entrada) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.entrada) }}
                                                    {{ form_errors(form.entrada) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.ueb) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.ueb) }}
                                                    {{ form_errors(form.ueb) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6 ">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.reserva) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.reserva) }}
                                                    {{ form_errors(form.reserva) }}
                                                </div>
                                            </div>


                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.materiaprima) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.materiaprima) }}
                                                    {{ form_errors(form.materiaprima) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6 ">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.cobertura) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.cobertura) }}
                                                    {{ form_errors(form.cobertura) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6 ">
                                                <label for="um"
                                                       class="col-xs-4 control-label"> {{ form_label(form.um) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.um) }}
                                                    {{ form_errors(form.um) }}
                                                </div>
                                            </div>
                                            <div class="form-group col-xs-6 ">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.demanda) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.demanda) }}
                                                    {{ form_errors(form.demanda) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6 ">
                                                <label for="codigo"
                                                       class="col-xs-4 control-label"> {{ form_label(form.existencia) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.existencia) }}
                                                    {{ form_errors(form.existencia) }}
                                                </div>
                                            </div>

                                        </fieldset>
                                    </div>
                                    <div class="tab-pane" id="tab_3">
                                        {% include 'ParteDiarioBundle:Default:add_incidencias.html.twig' %}
                                    </div><!-- /.tab-pane -->
                                </div><!-- /.tab-content -->
                            </div>
                            <fieldset>
                                <div class="col-xs-12 "><p class="mensaje-info"> <span class="glyphicon glyphicon-info-sign"></span> Debe llenar al menos uno de los campos: Existencia, Entrada, Reserva, Cobertura o Demanda.</p></div>

                                <div class="form-group">
                                    <div class="col-sm-4 col-xs-12  col-sm-offset-8">
                                        {% if action == 'Adicionar' %}
                                            {{ form_widget(form.guardar) }}
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}

                                        <a href="{{ path('parteaseguramiento_index',{'fecha':fecha, 'ueb':ueb}) }}" id="btn_cerrar"
                                           data-url="{{ path('parteaseguramiento_index') }}"
                                           class="btn btn-default  {% if action != 'Adicionar' %} editcerrar {% endif %}">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>

                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/js_plan/fn_parteaseg.js') }}"></script>
{% endblock %}




















