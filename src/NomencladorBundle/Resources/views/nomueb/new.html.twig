{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
{% block li_link %}   {% endblock %}
{% block li_actual %}   {% endblock %}
{% block link_actual %}{% endblock %}

    {% block titulo_cont %}
        <li><a href="{{ path('portada') }}">Inicio</a></li><li><a >Nomencladores</a></li>
        <li><a href="{{ path('ueb_index') }}">UEB </a></li>
        <li><a href="#">{{ accion }} </a></li>
    {% endblock %}

{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-ueb','class':'form-edit' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-xs-3 control-label"> {{ form_label(form.codigo) }}</label>

                                    <div class="col-xs-4" >
                                        {{ form_widget(form.codigo) }}
                                        {{ form_errors(form.codigo) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="nombre"
                                           class="col-xs-3 control-label"> {{ form_label(form.nombre) }}</label>

                                    <div class="col-xs-4" >
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <div class="col-xs-6 col-xs-offset-6">
                                    {% if accion == "Adicionar" %}
                                    <button title="Guardar" data-ajax-url="{{ path('ueb_new') }}"
                                            data-action="aplicar"
                                            type="submit" class="btn btn-primary disabled "
                                            id="btn_aplicar_ueb">
                                        <i class="glyphicon glyphicon-save icon-white"></i>
                                        Guardar
                                    </button>
                                    {% endif %}
                                    {{ form_widget(form.aceptar) }}
                                    <a title="Cancelar" href="{{ path('ueb_index') }}"
                                       data-url = "{{ path('ueb_index') }}"
                                       class="btn btn-default  {% if accion != 'Adicionar' %} editcerrar {% endif %} ">
                                        <i class="glyphicon glyphicon-remove icon-white"></i>
                                        Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}



