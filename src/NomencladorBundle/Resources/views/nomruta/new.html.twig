{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
 {% block titulo_cont %}
     <li><a href="{{ path('portada') }}">Inicio</a></li>
     <li><a >Nomencladores</a></li>
     <li><a href="{{ path('ruta_index') }}">Ruta</a></li>
     <li><a class="active">{{ accion }}</a></li>
 {% endblock %}

{% block contenido %}
    <div class="col-xs-6 col-sm-12" id="content">
        <section class="content" id="content">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    <div class="box box-primary ">
                        <div class="box-header">
                            <h3 class="box-title">{{ accion }}</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">

                            <div class=" bootstrap-validator-form">
                                {{ form_start(form,{'attr':{ 'id':'form-ruta','class':'form-edit' } }) }}
                                <fieldset>
                                    <div class="form-group col-sm-3">
                                        <label for="codigo"
                                               class=" control-label"> {{ form_label(form.codigo) }}</label>
                                        <div class="">
                                            {{ form_widget(form.codigo) }}
                                            {{ form_errors(form.codigo) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-sm-3">
                                        <label for="nombre"
                                               class=" control-label"> {{ form_label(form.nombre) }}</label>
                                        <div class="">
                                            {{ form_widget(form.nombre) }}
                                            {{ form_errors(form.nombre) }}
                                        </div>
                                    </div>

                                    <div class="form-group col-sm-12 col-xs-12">
                                        {% include 'NomencladorBundle:nomruta:add_suministrador.html.twig' %}
                                    </div>
                                </fieldset>
                                <fieldset>
                                    <div class="row">
                                        <div class="form-group col-xs-12">
                                            <div class="col-xs-6 col-xs-offset-6">
                                                {% if accion == "Adicionar" %}
                                                    <button title="Guardar" type="submit"
                                                            class="btn btn-primary  disabled" id="btn_agregar_ruta">
                                                        <i class="glyphicon glyphicon-save icon-white "></i>
                                                        Guardar
                                                    </button>
                                                {% endif %}
                                                {{ form_widget(form.aceptar) }}
                                                <a href="{{ path('ruta_index') }}"
                                                 data-url="{{ path('ruta_index') }}"
                                                   id="btn_cerrar" title="Cancelar"
                                                   class="btn btn-default  {% if accion != 'Adicionar' %} editcerrar {% endif %}"> <i
                                                            class="glyphicon glyphicon-remove icon-white"></i>
                                                    Cancelar
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/tercero/js/app.js') }}"></script>
    <script src="{{ asset('bundles/tercero/js/js_crud/fn_ruta.js') }}"></script>
{% endblock %}













