{% extends 'AdminBundle:Default:admin.html.twig' %}

{% block titulo_cont %}
    <li><a href="{{ path('portada') }}">Inicio</a></li>
    <li><a href="{{ path('config_general') }}">Administraci√≥n</a></li>
    <li><a href="{{ path('config_general') }}">Entidad</a></li>
    <li><a class="active">{{ accion }}</a></li>
{% endblock %}

{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary ">
                    <div class="box-body">
                        {{ form_start(form,{'attr':{'id':'form-adminent','class':'form-edit'}}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(form.reup_entidad) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(form.reup_entidad) }}
                                        {{ form_errors(form.reup_entidad) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="usuario"
                                           class="col-sm-3 control-label"> {{ form_label(form.nombreEntidad) }}</label>

                                    <div class="col-sm-5">
                                        {{ form_widget(form.nombreEntidad) }}
                                        {{ form_errors(form.nombreEntidad) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(form.direccion) }}</label>
                                    <div class="col-sm-5">
                                        {{ form_widget(form.direccion) }}
                                        {{ form_errors(form.direccion) }}
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-group ">
                                    <div class="col-sm-6 col-sm-offset-6">
                                        {% if accion == "Adicionar" %}
                                            <button id="btn_agre_adminent" data-accion="agregar" type="submit"
                                                    title="Guardar" class="btn btn-primary disabled ">
                                                <i class="glyphicon glyphicon-save icon-white"></i>
                                                Guardar
                                            </button>
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar" href="{{ path('config_general') }}"
                                           data-url="{{ path('config_general') }}"
                                           class="btn btn-default {% if accion != 'Adicionar' %} editcerrar {% endif %}">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>

                                    </div>
                                </div>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                            </fieldset>
                            <!-- /.box-body -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/js_plan/fn_admconfig.js') }}"></script>
{% endblock %}