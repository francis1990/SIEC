{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
{% block bread %}
{% endblock %}
{% block titulo_cont %}

    <li><a href="{{ path('portada') }}">Inicio</a></li>
    <li><a >Nomencladores</a></li>
    <li><a href="{{ path('aseguramiento_index') }}">Aseguramiento </a></li>
{% endblock %}
{% block contenido %}
    <div class="col-xs-6 col-sm-12" id="content">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-primary ">
                       <div class="box-header">
                            <h3 class="box-title">Editar</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            {{ form_start(edit_form,{'attr':{ 'id':'form-edit','class':'form-edit' }}) }}
                            <div class="form-horizontal bootstrap-validator-form">
                                <fieldset>

                                    {% block camp_codigo %}
                                        <div class="form-group">
                                            <label for="codigo"
                                                   class="col-sm-3 control-label"> {{ form_label(edit_form.codigo) }}</label>

                                            <div class="col-sm-6" >
                                                {{ form_widget(edit_form.codigo) }}
                                                {{ form_errors(edit_form.codigo) }}
                                            </div>
                                            <small style="display: none;"
                                                   class="help-block col-sm-offset-3 col-sm-9"></small>
                                        </div>
                                    {% endblock %}
                                    {% block camp_nombre %}
                                        <div class="form-group">
                                            <label for="nombre"
                                                   class="col-sm-3 control-label">{{ form_label(edit_form.nombre) }}</label>

                                            <div class="col-sm-6" >
                                                {{ form_widget(edit_form.nombre) }}
                                                {{ form_errors(edit_form.nombre) }}
                                            </div>
                                            <small
                                                   class="help-block col-sm-offset-3 col-sm-9"></small>
                                        </div>
                                    {% endblock %}
                                    {% block other_campos %}
                                    {% endblock %}
                                </fieldset>
                                <fieldset>
                                    <div class="form-group ">
                                        <div class="col-sm-6 col-sm-offset-6">
                                            <button type="submit" title="Aceptar"
                                                    class="btn btn-primary disabled  btn-aceptar" {% block link_modf %} {% endblock %} >
                                                <i class="glyphicon glyphicon-ok icon-white "></i>
                                                Aceptar
                                            </button>
                                            <a title="Cancelar" id="editcerrar" {% block link_cerrar %}{% endblock %}
                                                     class="btn btn-default editcerrar ">
                                                <i class="glyphicon glyphicon-remove icon-white"></i>
                                                Cancelar
                                            </a>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
