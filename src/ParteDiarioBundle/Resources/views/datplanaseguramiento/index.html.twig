            $('#filtro-ejercicio').val({{ ejercicio }})
            $('#filtro-tipoplans').val({{ tipoplan }})
            $('#categoria_plan').val(5);

            $('.input-month').keyup(function (evt) {
                valFloat($(this), evt, '#error-elem');
            });
