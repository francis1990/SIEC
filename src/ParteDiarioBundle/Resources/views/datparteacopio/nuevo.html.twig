{% extends 'ParteDiarioBundle:Default:partediario_base.html.twig' %}
{% block asiderigth %}"right-side strech"{% endblock %}
 {% block menu_lateral %}{% endblock %}
{% block hide_menu %}
{% endblock %}
  {% block titulo_cont %}
      <li><a href="{{ path('portada') }}">Inicio</a></li>
      <li><a href="{{ path('parteacopio_index',{'fecha':fecha, 'ueb':ueb}) }}">Parte diario de acopio</a></li>
      <li><a class="active">{{ action }}</a></li>
  {% endblock %}
{% block menu_bot %}
{% endblock %}
{% block contenido %}
    <section class="content" id="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ action }}</h3>
                    </div>
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'formacopio','class':'form-edit', 'novalidate':'novalidate' } }) }}
                        <div class=" bootstrap-validator-form">
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab_1" data-toggle="tab">Datos generales</a></li>
                                    <li><a href="#tab_3" data-toggle="tab">Incidencias</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_1">
                                        <fieldset>

                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class=" control-label col-xs-4"> {{ form_label(form.fecha) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.fecha) }}
                                                    {{ form_errors(form.fecha) }}
                                                </div>
                                            </div>

                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class=" control-label col-xs-4"> {{ form_label(form.ruta) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.ruta) }}
                                                    {{ form_errors(form.ruta) }}
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class=" control-label col-xs-4"> {{ form_label(form.ueb) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.ueb) }}
                                                    {{ form_errors(form.ueb) }}
                                                </div>
                                            </div>
                                            <div class="form-group col-xs-6">
                                                <label for="codigo"
                                                       class=" control-label col-xs-4"> {{ form_label(form.destino) }}</label>
                                                <div class="col-xs-8">
                                                    {{ form_widget(form.destino) }}
                                                    {{ form_errors(form.destino) }}
                                                </div>
                                            </div>



                                            <div class="col-xs-12">
                                                <div class="form-group col-sm-12 col-xs-12 cont-table-blanco">
                                                    {% include ('@ParteDiario/datparteacopio/suministro.html.twig') %}
                                                </div>
                                            </div>
                                            <div class=" hidden ">
                                                {{ render(controller('NomencladorBundle:NomUnidadmedida:listadoUMTipoVolumen')) }}
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="tab-pane" id="tab_3">
                                        {% include 'ParteDiarioBundle:Default:add_incidencias.html.twig' %}
                                    </div><!-- /.tab-pane -->
                                </div><!-- /.tab-content -->
                            </div>


                            <fieldset>
                                <div class="form-group">
                                    <div class=" col-sm-12 col-sm-offset-6">
                                        {% if action == 'Adicionar' %}
                                            {{ form_widget(form.guardar) }}
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar" href="{{ path('parteacopio_index',{'fecha':fecha, 'ueb':ueb}) }}"
                                           data-url="{{ path('parteacopio_index') }}"
                                           class="btn btn-default {% if action != 'Adicionar' %}editcerrar {% endif %}"
                                           id="btn_cerrar">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>

        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/js_plan/fn_parteacopio.js') }}"></script>
{% endblock %}
