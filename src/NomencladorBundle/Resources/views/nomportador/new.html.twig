{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
  {% block titulo_cont %}
      <li><a href="{{ path('portada') }}">Inicio</a></li>
      <li><a>Nomencladores</a></li>
      <li><a href="{{ path('portador_index') }}">Portador energético</a></li>
      <li><a class="active">{{ accion }}</a></li>
  {% endblock %}
{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form','class':'form-edit' } }) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                                <div class="form-group">
                                    <label for="unidadmedida"
                                           class="col-sm-3 control-label"> {{ form_label(form.codigo) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.codigo) }}
                                        {{ form_errors(form.codigo) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="unidadmedida"
                                           class="col-sm-3 control-label"> {{ form_label(form.nombre) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="unidadmedida"
                                           class="col-sm-3 control-label"> {{ form_label(form.idunidadmedida) }}</label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.idunidadmedida) }}
                                        {{ form_errors(form.idunidadmedida) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="alcance" class="col-sm-3 control-label"> Lecturas: </label>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.dia) }}
                                        <span style="margin-right:40px; font-size: 11px">Día</span>
                                        {{ form_widget(form.madrugada) }}
                                        <span style="margin-right:8px; font-size: 11px">Madrugada</span>
                                        {{ form_widget(form.pico) }}
                                        <span style="margin-right:15px; font-size: 11px">Pico</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="alcance" class="col-xs-3 control-label"> Valores: </label>
                                    <div class="col-xs-6">
                                        {{ form_widget(form.alcance) }}
                                        <span style="margin-right:15px; font-size: 11px">Alcance</span>
                                        {{ form_widget(form.inventario) }}
                                        <span style="margin-right:15px; font-size: 11px">Inventario</span>
                                        {{ form_widget(form.entrada) }}
                                        <span style="margin-right:15px; font-size: 11px">Entrada</span>
                                        {{ form_widget(form.existencia) }}
                                        <span style="margin-right:15px; font-size: 11px">Existencia</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="form-group">
                                <div class="col-sm-6 col-sm-offset-6">
                                    {% if accion == "Adicionar" %}
                                        <button title="Guardar" id="btn_agreportador" type="submit" name="agregar"
                                                data-accion="agregar" class="btn btn-primary   disabled">
                                            <i class="glyphicon glyphicon-save icon-white"></i>
                                            Guardar
                                        </button>
                                    {% endif %}
                                    {{ form_widget(form.aceptar) }}
                                    <a title="Cancelar"
                                       href="{{ path('portador_index') }}"
                                       data-url="{{ path('portador_index') }}"
                                       id="btn_cerrar"
                                       class="btn btn-default  {% if accion != 'Adicionar' %} editcerrar {% endif %}">
                                        <i class="glyphicon glyphicon-remove icon-white"></i>
                                        Cancelar
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}





