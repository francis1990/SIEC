{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
  {% block titulo_cont %}
      <li><a href="{{ path('portada') }}">Inicio</a></li>
      <li><a >Nomencladores</a></li>
      <li><a href="{{ path('conversion_index') }}">Conversi√≥n</a></li>
      <li><a class="active">{{ accion }}</a></li>
  {% endblock %}
{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-conversion','class': 'form-edit' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>

                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(form.iduminicio) }}</label>

                                    <div class="col-sm-6" >
                                        {{ form_widget(form.iduminicio) }}
                                        {{ form_errors(form.iduminicio) }}
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(form.idumfin) }}</label>

                                    <div class="col-sm-6" >
                                        {{ form_widget(form.idumfin) }}
                                        {{ form_errors(form.idumfin) }}
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(form.factor) }}</label>

                                    <div class="col-sm-6" >
                                        {{ form_widget(form.factor) }}
                                        {{ form_errors(form.factor) }}
                                    </div>

                                </div>

                            </fieldset>
                            <fieldset>
                                <div class="form-group">
                                    <div class="col-sm-6 col-sm-offset-6">
                                        {% if accion == "Adicionar" %}
                                        <button title="Guardar" type="submit" id="btn_agreconversion"
                                                data-accion="agregar"   class="btn btn-primary  disabled">
                                            <i class="glyphicon glyphicon-save icon-white"></i>
                                            Guardar
                                        </button>
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar" href="{{ path('conversion_index') }}" id="btn_cerrar"
                                           data-url ="{{ path('conversion_index') }}"
                                           class="btn btn-default {% if accion != 'Adicionar' %} editcerrar {% endif %}">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
