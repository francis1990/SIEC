            function toggleVal(b) {
                val = b;
                if (b)
                    $('.validar-box').slideDown(300);
                else
                    $('.validar-box').slideUp(300);
            }

            function toggleIns(b) {
                ins = b;
                if (b)
                    $('.insert-box').slideDown(300);
                else
                    $('.insert-box').slideUp(300);
            }

            function insertar() {
                ins = !ins;

                toggleIns(ins);
                toggleVal(false);
            }

            jQuery('#vaseguramiento').click(function () {
                val = !val;

                toggleVal(val);
                toggleIns(false);

                if (val) {
                    validar();
                }
            });
