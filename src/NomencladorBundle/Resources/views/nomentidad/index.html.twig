                                        if (value) {
                                            return '<span class="glyphicon glyphicon-ok text-green "></span>';
                                        } else {
                                            return '<span class="glyphicon glyphicon-remove text-red "></span>';
                                        }
                                    }
                                }, {
                                    noFilter: true,
                                    style: 'width: 80px; text-align: center',
                                    field: 'receptor',
