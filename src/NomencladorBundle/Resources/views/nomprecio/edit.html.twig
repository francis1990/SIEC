{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"
            src="{{ asset('bundles/tercero/js/jquery-easyui-1.5.2/jquery.easyui.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/jstree/dist/jstree.js') }}"></script>
    {% block otherscript %}
        <script type="text/javascript">

            $.fn.datepicker.defaults.format = "dd/mm/yyyy";

            $('.js-datepicker').datepicker({
                endDate: '{{ 'tomorrow' |date('d/m/Y') }}',
                onSelect: function (date) {
                    alert(date)
                },
                todayHighlight: true,
                pickTime: false,
                autoclose: true,
                language: 'es'
            });

            window.array_entidades = [];
            window.array_productos = [];
            //$.jstree.defaults.checkbox.three_state = false;
            tree_productos = $('#div_productosPrecio_tree');
            tree_productos.jstree({
                'plugins': ["checkbox"],
                'core': {
                    'data': {
                        'url': '{{ path('producto_tree') }}',
                        'data': function (node) {
                            return {'id': node.id};
                        }
                    },
                    'themes': {"responsive": false},
                    "multiple": true
                }
            });
            var prosel = [];
            var grusel = [];
            var contGru = 0;
            var preciomn = 0, preciocuc = 0;
            {% for v in gru %}
            grusel[contGru] = {{ v }}
                contGru++;
            {% endfor %}

            prosel[0] = {{ pro }}
                preciomn = {{ preciomn }}
                    preciocuc = {{ preciocuc }}
                        jQuery.validator.addMethod("excluyente",
                            function (value, element) {
                                var cuc = $('#nom_precio_preciocuc').val();
                                var mn = $('#nom_precio_preciomn').val();
                                return ((cuc !== 0 && mn !== 0) || (cuc !== '' && mn !== ''));
                            },
                            "Introduzca un valor mayor a 0, por favor"
                        );
            $('#form-precio').validate({
                rules: {
                    'nom_precio[preciocuc]': {
                        min: 0,
                        excluyente: true
                    },
                    'nom_precio[preciomn]': {
                        min: 0,
                        excluyente: true
                    }
                }
            });


            $('#div_productosPrecio_tree').on("loaded.jstree", function () {
                $('#div_productosPrecio_tree').jstree('select_node', prosel);
            });

            $('#div_productosPrecio_tree').on("load_node.jstree", function (data) {
                $('#div_productosPrecio_tree').jstree('select_node', prosel);
            });

            $('#div_productosPrecio_tree').on("changed.jstree", function (e, data) {
                window.array_productos = data.selected;
                $('#nom_precio_producto').attr('value', data.selected);
                validarBtn();
                if (!data.node) return;
            });

            tree = $('#div_entidades_tree');
            tree.jstree({
                'plugins': ["checkbox"],
                'core': {
                    'data': {
                        'url': '{{ path('grupointeres_tree') }}',
                        'data': function (node) {
                            return {'id': node.id};
                        }
                    },
                    'themes': {"responsive": false},
                    "multiple": true
                }
            });

            $('#div_entidades_tree').on("loaded.jstree", function () {
                $('#div_entidades_tree').jstree('select_node', grusel);
            });

            $('#div_entidades_tree').on("load_node.jstree", function (data) {
                $('#div_entidades_tree').jstree('select_node', grusel);
            });

            $('#div_entidades_tree').on("select_node.jstree", function (data) {
                var index = deselectEnt.indexOf(parseInt(data.selected));
                if (index != -1) {
                    deselectEnt.splice(index, 1);
                }
            });

            $('#div_entidades_tree').on("changed.jstree", function (e, data) {
                window.array_entidades = data.selected;
                $('#nom_precio_grupo').attr('value', data.selected);
                validarBtn();
                if (!data.node) return;
            });

            var deselectEnt = [];
            $('#div_entidades_tree').on("deselect_node.jstree", function (n, node) {
                deselectEnt.push(parseInt(node.node.id));
                var index = grusel.indexOf(parseInt(node.node.id));
                if (index != -1) {
                    grusel.splice(index, 1);
                }
            });

            window.ctrlKeyPressed = false;
            jQuery(window).keydown(function (e) {
                if (e.keyCode == 17) window.ctrlKeyPressed = true;
            });

            $('#nom_precio_preciocuc,#nom_precio_preciomn,#nom_precio_impuesto').keyup(function () {
                validarBtn()
                if ($('#nom_precio_preciocuc').val() != '' && $('#nom_precio_preciomn').val() != ''
                    && $('#nom_precio_preciocuc').val() != '0' && $('#nom_precio_preciomn').val() != '0')
                    $('#nom_precio_impuesto').attr('disabled', true).val('');
                else
                    $('#nom_precio_impuesto').removeAttr('disabled');
            });
            $('#nom_precio_um').change(function () {
                validarBtn();
            });

            function validarBtn() {
                if ($('#nom_precio_producto').val() != '' && $('#nom_precio_grupo').val() != ''
                    && ($('#nom_precio_preciocuc').val() != '' || $('#nom_precio_preciomn').val() != '')
                    && ($('#nom_precio_preciocuc').val() != '0' || $('#nom_precio_preciomn').val() != '0') && $('#form-precio').valid())
                    $('#btn_agregar_precio,#btn_add_precio').removeClass('disabled');
                else
                    $('#btn_agregar_precio,#btn_add_precio').addClass('disabled');
            }

            $('#form-precio').submit(function () {
                var selTopEnt = $('#div_entidades_tree').jstree('get_top_selected', true);
                var selTopProd = $('#div_productosPrecio_tree').jstree('get_top_selected', true);
                var elemEntidades = [];
                var elemProductos = [];
                var elemProductosAux = [];
                var elemProductosExist = [];
                /*Grupos de interes*/
                if (selTopEnt.length > 0) {
                    for (var j = 0; j < selTopEnt.length; j++) {
                        elemEntidades.push(selTopEnt[j].id);
                    }
                }

                /*Productos*/
                if (selTopProd.length > 0) {
                    for (var jj = 0; jj < selTopProd.length; jj++) {
                        elemProductos.push(selTopProd[jj].id);
                    }
                }

                var elemEntidadesJson = JSON.stringify(elemEntidades);
                var elemProductosJson = JSON.stringify(elemProductos);
                var elemGruposDeselectJson = JSON.stringify(deselectEnt);
                $('#nom_precio_enviado').val('enviado');
                $('#nom_precio_grupo').val(elemEntidadesJson);
                $('#nom_precio_producto').val(elemProductosJson);
                $('#nom_precio_productoexistente').val(prosel);
                $('#nom_precio_gruposdeselect').val(elemGruposDeselectJson);
                $('#nom_precio_preciomnold').val(preciomn);
                $('#nom_precio_preciocucold').val(preciocuc);
                return true;
            });

        </script>
    {% endblock %}
{% endblock %}

