{% extends 'ParteDiarioBundle:Default:partediario_base.html.twig' %}
{% block asiderigth %}"right-side strech"{% endblock %}

{% block hide_menu %}
{% endblock %}
{% block bread %}
{% endblock %}
 {% block titulo_cont %}
     <li><a href="{{ path('portada') }}">Inicio</a></li>

     <li><a href="{{ path('incidencia_index') }}">Incidencias</a></li>
     <li><a class="active">{{ accion }}</a></li>
 {% endblock %}

{% block menu_bot %}
{% endblock %}
{% block menu_lateral %}

{% endblock %}
{% block contenido %}
    <section class="content">

        <div class="box box-primary ">
            <div class="box-header">
                <h3 class="box-title">{{ accion }}</h3>
            </div>

            <div class="box-body">
                {{ form_start(form,{'attr':{ 'id':'form-incidencia','class': 'form-edit' }}) }}
                <div class="form-horizontal bootstrap-validator-form">
                    <fieldset>
                        <div class="form-group col-xs-6  ">
                            <label for="codigo"
                                   class="col-xs-4 control-label"> {{ form_label(form.idtipo) }}</label>
                            <div class="col-xs-8">
                                {{ form_widget(form.idtipo) }}
                                {{ form_errors(form.idtipo) }}
                            </div>

                        </div>
                        <div class="form-group col-xs-6">
                            <label for="codigo"
                                   class="col-xs-4 control-label"> {{ form_label(form.fecha) }}</label>
                            <div class="col-xs-8">
                                {{ form_widget(form.fecha) }}
                                {{ form_errors(form.fecha) }}
                            </div>

                        </div>

                        <div class="form-group col-xs-6  ">
                            <label for="codigo"
                                   class="col-xs-4 control-label"> {{ form_label(form.entidad) }}</label>
                            <div class="col-xs-8">
                                {{ form_widget(form.entidad) }}
                                {{ form_errors(form.entidad) }}
                            </div>

                        </div>

                        <div class="form-group col-xs-6 ">
                            <label for="codigo"
                                   class="col-xs-4 control-label"> {{ form_label(form.idcasificacion) }}</label>
                            <div class="col-xs-8">
                                {{ form_widget(form.idcasificacion) }}
                                {{ form_errors(form.idcasificacion) }}
                            </div>

                        </div>
                        <div class="form-group col-xs-6 ">
                            <label for="descripcion"
                                   class="col-xs-4 control-label"> {{ form_label(form.descripcion) }}</label>
                            <div class="col-xs-8">
                                {{ form_widget(form.descripcion) }}
                                {{ form_errors(form.descripcion) }}
                            </div>

                            <small style="display: none;" class="help-block col-sm-offset-3 col-sm-9"></small>
                        </div>

                    </fieldset>
                    <fieldset>

                        <div class="form-group ">
                            <div class="col-sm-6 col-sm-offset-6">
                                <button type="submit" class="btn btn-primary  "
                                        id="btn_addincidencia">
                                    <i class="glyphicon glyphicon-ok icon-white"></i>
                                    Aceptar
                                </button>
                                <a title="Cancelar"
                                   href="{{ path('incidencia_index') }}"
                                   data-url="{{ path('incidencia_index') }}"
                                   class="btn btn-default {% if accion != 'Adicionar' %} editcerrar {% endif %}">
                                    <i class="glyphicon glyphicon-remove icon-white"></i>
                                    Cancelar
                                </a>

                            </div>
                        </div>

                        {{ form_end(form) }}
                    </fieldset>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>


    </section>
{% endblock %}
{% block fecha %}

{% endblock %}
{% block more_scripts %}



    <script>
        $.fn.datepicker.defaults.format = "dd/mm/yyyy";

        $('.js-datepicker').datepicker({
            endDate: '{{ 'today' |date('d/m/Y') }}',
            onSelect: function (date) {
                alert(date)
            },
            todayHighlight: true,

            pickTime: false,
            autoclose: true,
            language: 'es'
        });
        jQuery(".chosen-select").chosen();
    </script>


{% endblock %}

