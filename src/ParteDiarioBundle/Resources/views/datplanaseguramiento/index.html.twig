                            style: "width:60px",
                            noFilter: true,
                            field: 'idunidadmedida',
                            class: 'text name',
                            header: 'UM',
                            type: '',
                            callback: function () {
                            }
                        }, {
                            style: "width:60px",
                            noFilter: true,
                            field: 'idmonedadestino',
                            class: 'text name',
                            header: 'Destino',
                            type: '',
                            callback: function () {
                            }
