{% block menu_lateral %}
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left info">
                <p>Administración</p>
            </div>
        </div>
        <ul class="sidebar-menu">
            {% if is_granted('ROLE_LISTAR_ADMINENTIDAD') %}
                <li class="treeview active">
                    <a href="#">
                        <i class="fa fa-edit"></i>
                        <span>Configuración</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu" style="diaplay: block">
                        <li class="active"><a href="{{ path('config_general',{ 'datos': 'entidad' }) }}"><i
                                        class="fa fa-angle-double-right"></i>
                                Entidad</a></li>
                    </ul>
                </li>
            {% endif %}

            {% if is_granted('ROLE_LISTAR_HISTORIAL') %}
                <li><a href="{{ path('admin_traza_index') }}"><i class="fa fa-angle-double-right"></i>Historial</a></li>
            {% endif %}

            {% if is_granted('ROLE_LISTAR_ROL') or is_granted('ROLE_LISTAR_USUARIO') %}
                <li class="treeview active">
                    <a href="#">
                        <i class="fa fa-edit"></i>
                        <span>Seguridad</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu" style="diaplay: block">
                        {% if is_granted('ROLE_LISTAR_ROL') %}
                            <li><a href="{{ path('admin_rol_lista') }}"><i
                                            class="fa fa-angle-double-right"></i>Roles</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_LISTAR_USUARIO') %}
                        <li class="active"><a href="{{ path('admin_usuario_lista') }}"><i
                                        class="fa fa-angle-double-right"></i> Usuarios</a></li>
                    </ul>
                    {% endif %}
                </li>
            {% endif %}
            {% if is_granted('ROLE_SALVAR_BD') %}
                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-edit"></i>
                        <span>Base de datos</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    <ul class="treeview-menu" style="diaplay: block">
                        <li><a href="{{ path('admin_salvaBD') }}"><i
                                        class="fa fa-angle-double-right"></i>Salvar</a></li>
                    </ul>
                </li>
            {% endif %}
        </ul>
    </section>
{% endblock %}