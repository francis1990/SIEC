{% extends 'ParteDiarioBundle:Default:partediario_base.html.twig' %}
{% block titulo_cont %}
    <li><a href="{{ path('portada') }}">Inicio</a></li>
    <li><a href="{{ path('parteportador_index',{'fecha':fecha, 'ueb':ueb}) }}">Parte diario de portador energ√©tico</a></li>
    <li><a href="#">Detalle</a></li>
{% endblock %}
{% block listtitle %}
    Detalle
{% endblock %}
{% block menu_bot %}
{% endblock %}
 {% block tabletab %}
     <div class="row">
         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4">Fecha: </label>
             <div class="col-sm-8">
                 {{ parte.fecha | date('d/m/Y') }}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Madrugada:</label>
             <div class="col-sm-8">
                 {% if parte.madrugada != null %}
                     {{ parte.madrugada }}
                 {% else %}
                     0
                 {% endif %}
             </div>

         </div>


         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> UEB:</label>
             <div class="col-sm-8">
                 {{ parte.ueb }}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Alcance:</label>
             <div class="col-sm-8">
                 {% if parte.alcance != null %}
                     {{ parte.alcance }}
                 {% else %}
                     0
                 {% endif %}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Portador:</label>
             <div class="col-sm-8">
                 {{ parte.portador }}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Inventario:</label>
             <div class="col-sm-8">
                 {{ parte.inventario }}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Unidad de medida:</label>
             <div class="col-sm-8">
                 {{ parte.um }}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Entrada:</label>
             <div class="col-sm-8">
                 {% if parte.entrada != null %}
                     {{ parte.entrada }}
                 {% else %}
                     0
                 {% endif %}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Pico:</label>
             <div class="col-sm-8">
                 {% if parte.pico != null %}
                     {{ parte.pico }}
                 {% else %}
                     0
                 {% endif %}
             </div>
         </div>

         <div class="form-group col-sm-6 ">
             <label for="codigo" class="control-label col-sm-4"> Existencia:</label>
             <div class="col-sm-8">
                 {% if parte.existencia != null %}
                     {{ parte.existencia }}
                 {% else %}
                     0
                 {% endif %}
             </div>
         </div>

     </div>

     <div class="box-header">
         <h3 class="box-title">
             Medidores
         </h3>
     </div>
     <table aria-describedby="detalle_parte" id="detalleparteportador-table"
            class="table table-bordered table-condensed table-striped dataTable">
         <thead>
         <tr>
             <th>Medidor</th>
             <th>Lectura</th>
             <th>Multiplicado por</th>
             <th>Consumo</th>
         </tr>
         </thead>
         <tbody aria-relevant="all" aria-live="polite" role="alert">
         {% for medi in parte.listMedidor %}
             <tr>
                 <td>{{ medi.medidor }}</td>
                 <td>{{ medi.lectura }}</td>
                 <td>{{ medi.multiplicador }}</td>
                 <td>{{ medi.consumo }}</td>
             </tr>
         {% endfor %}
         </tbody>
     </table>

     <button title="Regresar" id="regresar_detalle" data-url="{{ path('parteportador_index',{'fecha':fecha, 'ueb':ueb}) }}"
             class="btn btn-primary col-xs-offset-10"><i
                 class="glyphicon glyphicon-arrow-left icon-white"></i> Regresar
     </button>
 {% endblock %}


