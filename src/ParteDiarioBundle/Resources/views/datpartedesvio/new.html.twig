{% extends 'ParteDiarioBundle:Default:partediario_base.html.twig' %}

  {% block titulo_cont %}
      <li><a href="{{ path('portada') }}">Inicio</a></li>
      <li><a href="{{ path('partedesvio_index') }}">Parte diario desvio</a></li>
      <li><a class="active">{{ action }}</a></li>
  {% endblock %}
{% block menu_bot %}
{% endblock %}
{% block contenido %}
        <section class="content" id="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">

                    <div class="box-body ">
                        {{ form_start(form,{'attr':{ 'id':'form-pdesvio' ,'class':'form-edit','novalidate':'novalidate' } }) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <div class="nav-tabs-custom">
                                <ul class="nav nav-tabs">
                                    <li class="active"><a href="#tab_1" data-toggle="tab">Datos generales</a></li>
                                    <li><a href="#tab_3" data-toggle="tab">Incidencias</a></li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane active" id="tab_1">
                                        <fieldset>
                                            <div class="form-group ">
                                                <label for="codigo"
                                                       class="control-label  col-sm-3"> {{ form_label(form.ueb) }}</label>
                                                <div class="col-sm-6">
                                                    {{ form_widget(form.ueb) }}
                                                    {{ form_errors(form.ueb) }}
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="codigo"
                                                       class="col-sm-3 control-label"> {{ form_label(form.fecha) }}</label>
                                                <div class="col-sm-6">
                                                    {{ form_widget(form.fecha) }}
                                                    {{ form_errors(form.fecha) }}
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="codigo"
                                                       class="col-sm-3 control-label"> {{ form_label(form.producto) }}</label>
                                                <div class="col-sm-6">
                                                    {{ form_widget(form.producto) }}
                                                    {{ form_errors(form.producto) }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="codigo"
                                                       class="col-sm-3 control-label"> {{ form_label(form.destino) }}</label>
                                                <div class="col-sm-6">
                                                    {{ form_widget(form.destino) }}
                                                    {{ form_errors(form.destino) }}
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="codigo"
                                                       class="col-sm-3 control-label"> {{ form_label(form.um) }}</label>
                                                <div class="col-sm-6">
                                                    {{ form_widget(form.um) }}
                                                    {{ form_errors(form.um) }}
                                                </div>
                                            </div>
                                            <div class="form-group ">
                                                <label for="codigo"
                                                       class="col-sm-3 control-label"> {{ form_label(form.cantidad) }}</label>
                                                <div class="col-sm-6">
                                                    {{ form_widget(form.cantidad) }}
                                                    {{ form_errors(form.cantidad) }}
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>
                                    <div class="tab-pane" id="tab_3">
                                        {% include 'ParteDiarioBundle:Default:add_incidencias.html.twig' %}
                                    </div><!-- /.tab-pane -->
                                </div><!-- /.tab-content -->
                            </div>
                            <fieldset>
                                <div class="form-group">
                                    <div class="col-sm-6 col-xs-12  col-sm-offset-6">
                                        {% if action == 'Adicionar' %}
                                            {{ form_widget(form.guardar) }}
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a  title="Cancelar" id="btn_cerrar" href="{{ path('partedesvio_index') }}"
                                            data-url="{{ path('partedesvio_index') }}"
                                           class="btn btn-default btn-cancel
                                           {% if action != 'Adicionar' %} editcerrar {% endif %}">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>

                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/tercero/js/js_plan/fn_partedesvio.js') }}"></script>
{% endblock %}