{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}

{% block titulo_cont %}
    <li><a href="{{ path('portada') }}">Inicio</a></li>
    <li><a >Nomencladores</a></li>
    <li><a href="{{ path('ejercicio_index') }}">Ejercicio</a></li>
    <li><a href="#" class="">{{ accion }}</a></li>
{% endblock %}

{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-ejercicio', 'class':'form-edit' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">

                            <div class="form-horizontal bootstrap-validator-form">
                                <fieldset>
                                    <div class="form-group col-xs-12">
                                        <label for="nombre"
                                               class="col-sm-3 control-label"> {{ form_label(form.nombre) }}</label>

                                        <div class="col-sm-4">
                                            {{ form_widget(form.nombre) }}
                                            {{ form_errors(form.nombre) }}
                                        </div>
                                    </div>
                                </fieldset>

                            </div>
                            <div class="row">
                                <div class="form-group col-xs-12">
                                    <div class="col-xs-5 col-xs-offset-4">
                                        {% if accion == "Adicionar" %}
                                            <button title="Guardar" data-ajax-url="{{ path('ejercicio_new') }}"
                                                    data-action="aplicar"
                                                    type="submit" class="btn btn-primary disabled  "
                                                    id="btn_aplicar_ejercicio">
                                                <i class="glyphicon glyphicon-save icon-white"></i>
                                                Guardar
                                            </button>
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar"
                                           href="{{ path('ejercicio_index') }}"
                                           data-url="{{ path('ejercicio_index') }}"
                                           class="btn btn-default  {% if accion != 'Adicionar' %} editcerrar {% endif %}">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}