{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
{% block bread %}
{% endblock %}
{% block titulo_cont %}
    <li><a href="{{ path('portada') }}">Inicio</a></li><li><a >Nomencladores</a></li>
    <li><a href="{{ path('clasificacionincidencia_index') }}">Clasificaci√≥n de incidencia</a></li>
    <li><a href="#">{{ accion }} </a></li>
{% endblock %}
{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{{ accion }}</h3>
                    </div>
                    <div class="box-body">
                        {{ form_start(form,{'attr':{ 'id':'form-clasincidencia','class': 'form-edit' }}) }}
                        <div class="form-horizontal bootstrap-validator-form">
                            <div class="col-sm-offset-3" id="div_error_long" style="width: 300px; border: hidden"></div>
                            <fieldset>
                                <div class="form-group col-xs-12">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(form.codigo) }}</label>

                                    <div class="col-sm-4"   >
                                        {{ form_widget(form.codigo) }}
                                        {{ form_errors(form.codigo) }}
                                    </div>
                                    <small style="display: none;" class="help-block col-sm-offset-3 col-sm-9"></small>
                                </div>
                                <div class="form-group col-xs-12">
                                    <label for="codigo"
                                           class="col-sm-3 control-label"> {{ form_label(form.nombre) }}</label>

                                    <div class="col-sm-4">
                                        {{ form_widget(form.nombre) }}
                                        {{ form_errors(form.nombre) }}
                                    </div>

                                    <small style="display: none;" class="help-block col-sm-offset-3 col-sm-9"></small>

                                </div>

                            </fieldset>
                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-4">
                                        {% if accion == "Adicionar" %}
                                        <button id="btn_agreclasif"  type="submit"
                                                title="Guardar" class="btn btn-primary disabled">
                                            <i class="glyphicon glyphicon-save icon-white"></i>
                                            Guardar
                                        </button>
                                        {% endif %}
                                        {{ form_widget(form.aceptar) }}
                                        <a title="Cancelar"
                                           href="{{ path('clasificacionincidencia_index') }}"
                                           data-url="{{ path('clasificacionincidencia_index') }}"
                                           id="btn_cerrar"
                                           class="btn btn-default  {% if accion != 'Adicionar' %} editcerrar {% endif %}">
                                            <i class="glyphicon glyphicon-remove icon-white"></i>
                                            Cancelar
                                        </a>
                                    </div>
                                </div>

                            </fieldset>
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

