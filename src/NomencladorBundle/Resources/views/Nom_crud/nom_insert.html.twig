{% extends 'NomencladorBundle:Default:nom_base.html.twig' %}
{% block bread %}
{% endblock %}
{% block titulo_cont %}

    <li><a href="{{ path('portada') }}">Inicio</a></li>
    <li><a >Nomencladores</a></li>
    <li><a href="{{ path('aseguramiento_index') }}">Tipo de Aseguramiento </a></li>
    <li><a href="{{ path('aseguramiento_new') }}">Nuevo </a></li>
{% endblock %}
{% block contenido %}
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary ">
                    <div class="box-header">
                        <h3 class="box-title">{% if accion is not defined %}Nuevo{% else %}{{ accion }}{% endif %}</h3>
                    </div>
                    <div class="box-body">
                        {% block form_start %}
                            {{ form_start(form,{'attr':{ 'id':'form','class':'form-edit' } }) }}
                        {% endblock %}
                        <div class="form-horizontal bootstrap-validator-form">
                            <fieldset>
                                {% block mensaje_error_general %}
                                    <div class="col-sm-offset-3" id="div_error" ></div>
                                {% endblock %}
                                {% block camp_codigo %}
                                    <div class="form-group col-xs-6">
                                        <label for="codigo"
                                               class="col-xs-4 control-label"> {{ form_label(form.codigo) }}</label>

                                        <div class="col-xs-8" >
                                            {{ form_widget(form.codigo) }}
                                            {{ form_errors(form.codigo) }}
                                        </div>
                                    </div>
                                {% endblock %}
                                {% block camp_nombre %}
                                    <div class="form-group col-xs-6">
                                        <label for="nombre"
                                               class="col-xs-4 control-label"> {{ form_label(form.nombre) }}</label>

                                        <div class="col-xs-8" >
                                            {{ form_widget(form.nombre) }}
                                            {{ form_errors(form.nombre) }}
                                        </div>
                                    </div>
                                {% endblock %}
                                {% block form_col3 %}

                                {% endblock %}
                            </fieldset>

                        </div>

                        {% block botonesInsert %}
                        <div class="row">
                            <div class="col-md-offset-6">

                                <a href="#" {% block link_agregar %}  data-ajax-url="{{ path('aseguramiento_insert') }}" id="btn_agretipoase" {% endblock %}
                                   class="btn btn-primary  disabled" data-action="guardar">
                                    <i class="glyphicon glyphicon-save icon-white"></i>
                                    Guardar</a>
                                <a href="#" {% block link_insert %}  data-ajax-url="{{ path('aseguramiento_insert') }}" id="btn_addtipoase" {% endblock %}
                                   class="btn btn-primary  disabled" data-action="aceptar">
                                    <i class="glyphicon glyphicon-ok icon-white"></i>
                                    Aceptar</a>
                                <a href="{% block cerrar_index %} {{ path('aseguramiento_index') }} {% endblock %}"
                                   class="btn btn-default " id="btn-cerrar">
                                    <i class="glyphicon glyphicon-remove icon-white"></i>
                                    Cancelar
                                </a>

                            </div>
                        </div>
                        {% endblock %}
                        {{ form_rest(form) }}
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
